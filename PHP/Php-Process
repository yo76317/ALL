if
<?php
    if (條件式) {
        // 當條件成立時執行的內容
    }
?>
-------------------------------------
if ... else
<?php
    if (條件式) {
        // 當條件成立時執行的內容
    } else {
        // 當條件不成立時執行的內容
    }
?>
-------------------------------------
if ... else if ... else
<?php
    if (條件 1) {
        // 當條件 1 成立時執行的內容
    } else if (條件 2) {
        // 當條件 2 成立時執行的內容
    } else {
        // 當所有條件都不成立執行的內容
    } 
?>
-------------------------------------
switch
<?php
    switch (變數) {
        case 方案 1:
            // 當方案 1 成立時執行的內容
            break;
        case 方案 2:
            // 當方案 2 成立時執行的內容
            break;
        default :
            // 當所有方案都不成立執行的內容
    }
?>
-------------------------------------
while
<?php
    while (條件式) {
        // 執行程式的內容
    }
?>
-------------------------------------
do ... while
<?php
    do {
        // 執行程式的內容
    } while (條件式)
?>
-------------------------------------
for
<?php 
    for (設定變數初始值 ; 條件式 ; 變數計次方式) {
        // 執行程式的內容
    }
?>
-------------------------------------
<?php
    function 函式名稱 ([參數1, 參數2, ...])
    {
        // 執行程式的內容
        // [return 回傳值;]
    }
?>
-------------------------------------
-------------------------------------
